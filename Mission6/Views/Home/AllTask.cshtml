@{
    ViewData["Title"] = "All Tasks";
}

@model List<TheTask>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Task</th>
            <th>Due Date</th>
            <th>Category</th>
            <th>Quadrant</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Description</td>
            <td>@x.DueDate</td>

            <td>@x.Category.CategoryName</td>
            <td>@x.Quadrant.QuadrantName</td>

            <!--Check the routing tag if errors pop up-->
            <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
        </tr>
        }
    </tbody>
</table>