@{
    ViewData["Title"] = "Delete Task";
}
@model TheTask
<div class="text-center">
    <h1>Delete @Model.Description</h1>
    <form method="post" asp-action="Delete">
        <input asp-for="TaskId" type="hidden" />
        <button class="btn btn-secondary btn-large" type="submit">Delete</button>
        <br />
        <br />
        <a asp-controller="Home" asp-action="AllTask" class="btn btn-large btn-primary">Cancel</a>
    </form>
</div>